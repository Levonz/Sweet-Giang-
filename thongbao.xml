<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent" android:layout_height="wrap_content" >

	<ScrollView android:id="@+id/thongbao" 
		android:layout_width="wrap_content" 
		android:layout_height="match_parent" >

		<RelativeLayout android:id="@+id/content_container" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" >

			<View   android:id="@+id/_bg__thongbao"
				android:background="@drawable/_bg__thongbao_shape"
				 android:layout_marginStart="0dp"
				android:layout_marginTop="0dp"
				android:layout_width="411dp"
				android:layout_height="823dp" />

			<TextView android:id="@+id/thongbaotext"
				android:textStyle="bold"
				android:textSize="24sp"
				android:textColor="@color/pink_FF647F_color"
				android:layout_marginLeft="40dp"
				android:layout_marginTop="27dp"
				android:layout_width="154dp"
				android:layout_height="46dp"
				android:text="@string/thongbao_string"
				 />


			<RelativeLayout android:id="@+id/angle_left"
				android:layout_marginTop="27dp"
				android:layout_marginStart="10dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				>

				<ImageView android:id="@+id/vector"
					android:src="@drawable/vector"
					android:contentDescription="vector"
					 android:layout_marginStart="9dp"
					android:layout_marginTop="6dp"
					android:layout_width="12.11dp"
					android:layout_height="18.76dp" />

			</RelativeLayout>

			<View   android:id="@+id/rectangle_4204"
				android:background="@drawable/rectangle_4204_shape"
				 android:layout_marginStart="20dp"
				android:layout_marginTop="70dp"
				android:layout_width="371dp"
				android:layout_height="100dp" />

			<TextView android:id="@+id/noidung"
				android:textStyle="bold"
				android:textSize="16sp"
				android:textColor="@color/pink_FF647F_color"
				android:layout_marginLeft="31dp"
				android:layout_marginTop="92dp"
				android:layout_width="367dp"
				android:layout_height="49dp"
				android:text="@string/noidung_string"
				 />

			<TextView android:id="@+id/luuma"
				android:textStyle="bold"
				android:textSize="16sp"
				android:textColor="@color/brown_574143_color"
				android:layout_marginLeft="320dp"
				android:layout_marginTop="144dp"
				android:layout_width="79dp"
				android:layout_height="30dp"
				android:text="@string/luuma_string"
				 />

			<TextView android:id="@+id/han"
				android:textStyle="bold"
				android:textSize="12sp"
				android:textColor="@color/brown_574143_color"
				android:layout_marginLeft="31dp"
				android:layout_marginTop="77dp"
				android:layout_width="124dp"
				android:layout_height="23dp"
				android:text="@string/thoigian_string"
				 />

		</RelativeLayout>

	</ScrollView>
</HorizontalScrollView>